<Window x:Class="MyWorkoutRoutines.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyWorkoutRoutines"
        mc:Ignorable="d"
        AllowDrop="True" ResizeMode="CanResizeWithGrip" AllowsTransparency="True"
        Title="MyWorkoutRoutines" Height="450" Width="810" Background="Transparent" WindowStyle="None" Loaded="Window_Loaded">

    <Border x:Name="ParentBorder" Background="#8B0000" CornerRadius="15,15,15,15" Padding="8" BorderThickness=".65">
        <Grid x:Name="ParentGrid" >
            <Grid.RowDefinitions>
                <RowDefinition Height="25"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>

            <Border x:Name="TitleDrawBar" CornerRadius="25,15,0,0" Background="#8B0000" Margin="-8,-8,-8,391.333"
                    VerticalAlignment="Top" MinHeight="50" UseLayoutRounding="False"
                    MouseLeftButtonDown="DrawWindow_MouseLeftButtonDown"/>

            <TextBlock Grid.Row="0" Foreground="#EBEBEB" FontSize="15" FontWeight="Light" Margin="0,-2,0,402" Text="MyWorkoutRoutines" Grid.RowSpan="2"/>
            <Grid Grid.Row="0" Width="210" Height="30" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,-5,-10,0">
                <Button Width="25"
                        Margin="178,0,6,0" Height="25" Content="🗙" Click="Close_Program"
                        Background="{x:Null}" Foreground="#EBEBEB" BorderBrush="{x:Null}"  />
                <Button x:Name="MaximizeProgram"
                        Width="25" Height="25" Margin="158,2,28,2" Content="🗖"
                        Background="{x:Null}" Foreground="#EBEBEB" BorderBrush="{x:Null}" Click="Maximize_Program" />
                <Button Width="25"
                        Margin="138,2,47,2" Height="25" Content="🗕" Click="Minimize_Program"
                        Background="{x:Null}" Foreground="#EBEBEB" BorderBrush="{x:Null}"/>

            </Grid>

            <!--<ContentControl Margin="92,0,0,407" Grid.Row="1"/>-->
            <TabControl Grid.Row="1" Margin="-8,0,-8,0" BorderThickness="0" Height="397" VerticalAlignment="Top" Background="#EBEBEB"
                    >
                <TabItem x:Name="Hauptbildschirm" Header="Hauptbildschirm" BorderThickness="0" Width="200" Background="#8B0000" BorderBrush="#8B0000" Height="30" FontWeight="Bold" Foreground="#8B0000">

                    <Button x:Name="btnUpload" Background="#8B0000" Foreground="#EBEBEB" FontWeight="Light" FontFamily="Arial" Grid.Row="2" Height="48" Width="48" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,20,15" FontSize="32" VerticalContentAlignment="Center" BorderBrush="#8B0000" Content="+">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="21"></Setter>
                            </Style>
                        </Button.Resources>
                    </Button>

                </TabItem>


                <TabItem Header="Routinen erstellen" BorderThickness="0" Width="200" Background="#8B0000" BorderBrush="#8B0000" FontWeight="Bold" Foreground="#EBEBEB">

                </TabItem>
                <TabItem Header="Meine Routinen" BorderThickness="0" Width="200" Background="#8B0000" BorderBrush="#8B0000" FontWeight="Bold" Foreground="#EBEBEB">

                </TabItem>
                <TabItem Header="Trainingsverlauf" BorderThickness="0" Width="200" Background="#8B0000" BorderBrush="#8B0000" FontWeight="Bold" Foreground="#EBEBEB" >

                </TabItem>
            </TabControl>

        </Grid>
    </Border>
</Window>
