<Window x:Class="MyWorkoutRoutines.AddRepetitionsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyWorkoutRoutines"
        mc:Ignorable="d"
        Title="AddRepetitionsWindow" Height="120" Width="200">
    
    <Grid x:Name="ParentGrid">
        <StackPanel>
            <TextBlock Foreground="Black" Margin="5 5 0 15" FontWeight="DemiBold">Geben Sie bitte eine Anzahl
                 an<LineBreak/> Wiederholungen an.</TextBlock>
            <Grid>
                <TextBox x:Name="AddRepetition" Width="90" HorizontalAlignment="Left" Margin="5 0 0 0"/>
                <Label Foreground="Black" Content="Wiederholungen" Margin="92 0 0 0"/>
            </Grid>
        </StackPanel>

    </Grid>
</Window>
