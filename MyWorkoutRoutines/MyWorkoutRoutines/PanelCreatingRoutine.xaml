<UserControl x:Class="MyWorkoutRoutines.PanelCreatingRoutine"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MyWorkoutRoutines"
             mc:Ignorable="d" 
             d:DesignHeight="355" d:DesignWidth="810" Background="#EBEBEB" x:Name="CreateRoutinePage" Loaded="CreateRoutinePage_Loaded">
    <Grid>
        <UserControl x:Name="Pagee"/>

        <ListBox Margin="10,10,599,10" Loaded="ListBox_Loaded" x:Name="listboxExercises">
            <ListBoxItem >
                <TextBlock></TextBlock>
            </ListBoxItem>

        </ListBox>

        <ListBox Margin="373,10,236,10" Loaded="ListBox_Loaded">
            <ListBoxItem >
                <TextBlock></TextBlock>
            </ListBoxItem>

        </ListBox>

        <Button x:Name="btnUpload" Background="#8B0000" Foreground="#EBEBEB" BorderThickness="0" FontWeight="Light" FontFamily="Arial" Grid.Row="2" Height="48" Width="48"
                            VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,20,15" FontSize="32" VerticalContentAlignment="Center" BorderBrush="#8B0000" Content="+"
                            Click="btnCreatingRoutine">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="21"></Setter>
                </Style>
            </Button.Resources>
        </Button>
    </Grid>
</UserControl>
